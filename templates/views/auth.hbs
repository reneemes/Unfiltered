<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sign In - Unfiltered</title>
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:wght@700&family=Open+Sans:wght@400;600;700&display=swap"
      rel="stylesheet"
    />
    <link rel="icon" type="image/png" href="/img/favicon-32x32.png">
    <link rel="stylesheet" href="/css/auth/auth.css" />
  </head>
  <body>

    <main class="auth-container">
      <!-- Logo -->
      <header class="logo-header" role="banner">
        <div class="logo-text">
          <span class="logo-un">UN</span><span class="logo-filtered">FILTERED</span>
        </div>
      </header>

      <!-- Tab Toggle -->
      <div class="tab-toggle">
        <button id="loginTab" class="tab-btn active">Log In</button>
        <button id="signupTab" class="tab-btn">Sign Up</button>
      </div>

      <!-- Auth Card -->
      <div class="auth-card">

        <!-- Login Form -->
        <form id="loginForm" class="auth-form">
          <div class="input-group">
            <label for="loginUsername">Username</label>
            <input type="text" id="loginUsername" name="username" required />
          </div>

          <div class="input-group">
            <label for="loginPassword">Password</label>
            <input type="password" id="loginPassword" name="password" required />
          </div>

          <button type="submit" class="submit-btn">Log In</button>
          <span class="loginForm-feedback"></span>
        </form>

        <!-- Signup Form (hidden by default) -->
        <form id="signupForm" class="auth-form hidden">
          <div class="input-group">
            <label for="signupFirstName">First Name</label>
            <input type="text" id="signupFirstName" name="firstName" required />
          </div>

          <div class="input-group">
            <label for="signupUsername">Username</label>
            <input type="text" id="signupUsername" name="username" required />
          </div>

          <div class="input-group">
            <label for="signupPassword">Password</label>
            <input type="password" id="signupPassword" name="password" required />
          </div>

          <!-- Profile Image Selector -->
          <fieldset class="input-group">
            <legend>Choose Your Avatar</legend>
            <div class="avatar-selector">
              <input type="radio" name="profileImg" id="avatar1" value="/img/avatar1.png" required hidden />
              <label for="avatar1" class="avatar-option">
                <img src="/img/avatar1.png" alt="Avatar 1" />
              </label>

              <input type="radio" name="profileImg" id="avatar2" value="/img/avatar2.png" hidden />
              <label for="avatar2" class="avatar-option">
                <img src="/img/avatar2.png" alt="Avatar 2" />
              </label>

              <input type="radio" name="profileImg" id="avatar3" value="/img/avatar3.png" hidden />
              <label for="avatar3" class="avatar-option">
                <img src="/img/avatar3.png" alt="Avatar 3" />
              </label>

              <input type="radio" name="profileImg" id="avatar4" value="/img/avatar4.png" hidden />
              <label for="avatar4" class="avatar-option">
                <img src="/img/avatar4.png" alt="Avatar 4" />
              </label>
            </div>
          </fieldset>

          <button type="submit" class="submit-btn">Sign Up</button>
          <span class="signupForm-feedback"></span>
        </form>

      </div>

      <!-- Back to landing -->
      <a href="/" class="back-link">← Back to Home</a>

    </main>

<!-- Copyright Footer-->
  <footer class="footer">
    <p>© 2026 Unfiltered. All Rights Reserved.</p>
  </footer>

    <script src="/js/auth.js"></script>
  </body>
</html>