  <body>
    <main>
      <!-- HEADER SECTION -->
      <section class="header-section">

          <!-- TITLE SECTION -->
        <div class="title-section">
          <h1>Hi, <span class="user-name">{{user.firstName}}</span></h1>
          <h1>How are you doing today?</h1>
        </div>

        <!-- PROFILE SECTION -->
        <div class="profile-section">
          <img src="{{user.profileImg}}" alt="Profile Picture" />
          <span class="profile-text">Profile</span>
        </div>    
      </section>
      
      <!-- CONTENT SECTION -->
      <section class="content-section">
        <!-- WEEK DAYS -->
        <section class="week-days">
          <div class="days-container">
            <!-- Sunday -->
            <div class="day"><p>S</p><span class="day-number">10</span></div>
            <!-- Monday -->
            <div class="day"><p>M</p><span class="day-number">0</span></div>
            <!-- Tuesday -->
            <div class="day"><p>T</p><span class="day-number">0</span></div>
            <!-- Wednesday -->
            <div class="day"><p>W</p><span class="day-number">0</span></div>
            <!-- Thursday -->
            <div class="day"><p>T</p><span class="day-number">0</span></div>
            <!-- Friday -->
            <div class="day"><p>F</p><span class="day-number">0</span></div>
            <!-- Saturday -->
            <div class="day"><p>S</p><span class="day-number">0</span></div>
          </div>
        </section>

        <!-- GRAPH SECTION -->
        <div class="graph-section">
          <div id="myChart" style="max-width:700px; height:400px"></div>
          <div>
            <button data-range="week">Week</button>
            <button data-range="month">Month</button>
            <button data-range="year">Year</button>
          </div>
        </div>

        <!-- MOOD SECTION -->
        <div class="mood-section">
