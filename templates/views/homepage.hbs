        </div>

        <!-- JOURNAL CONTENT -->
        <div class="journal-section">
          <form id="journalForm">
            <label for="journalTitle">Title</label>
            <input
              type="text"
              id="journalTitle"
              placeholder="Write your title here..." required/>

            <label for="journal">Your journal</label>
            <textarea
              id="journal"
              placeholder="Write your daily thoughts here..." required></textarea>

            <button id="saveJournalBtn">Save</button>
          </form>
      </div>

        <!-- JOURNAL HISTORY SECTION -->
